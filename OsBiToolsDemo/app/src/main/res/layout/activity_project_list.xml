<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/cell_vpadding"
    android:paddingRight="@dimen/cell_vpadding"
    android:paddingTop="@dimen/cell_vpadding"
    android:paddingBottom="@dimen/cell_vpadding"
    android:id="@+id/main_window"
    tools:context=".ProjectListActivity">

    <!-- Logout progress -->
    <ProgressBar android:id="@+id/logout_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="8dp" android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:dividerPadding="5dp"
        android:id="@+id/pl_frame" />
</FrameLayout>
